    "url": "https://github.com/ItamarTati/shows/issues"
  },
  "homepage": "https://github.com/ItamarTati/shows#readme",
  "dependencies": {
    "@types/node": "^14.0.5",
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "mongoose": "^5.9.15",
    "nodemon": "^2.0.3"
  }
}
